<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.hotel.data.hotel.TagRelationMapper">

    <insert id="insert" parameterType="com.example.hotel.po.TagRelation"
    useGeneratedKeys="true" keyProperty="relationId">
        insert into TagRelation(hotelId,tagId)
        values (#{hotelId},#{tagId})
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        delete from TagRelation where relationId=#{relationId}
    </delete>

    <select id="selectTagsByHotelId" resultMap="TagRelation" parameterType="java.lang.Integer">
        select * from TagRelation where hotelId=#{hotelId}
    </select>



    <resultMap id="TagRelation" type="com.example.hotel.po.TagRelation">
        <id column="relationId" property="relationId"></id>
        <result column="hotelId" property="hotelId"></result>
        <result column="tagId" property="tagId"></result>
    </resultMap>


</mapper>